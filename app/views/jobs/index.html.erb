<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<% if current_user.role == "admin" %>

<%= link_to 'Create new Job alert', new_job_path,:class=>"waves-effect waves-light btn btn-primary blue darken-1 btn-center", method: :get %>
<% end %>



<div class="container">          
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Url</th>
      <th>Job</th>
      <th>Age</th>
      <th>Qualification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name %></td>
        <td><%= job.url %></td>
        <td><%= job.job %></td>
        <td><%= job.age %></td>
        <td><%= job.qualification %></td>
        <td><%= link_to 'Show', job %></td>
        <% if current_user.role == "admin" %>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
<br>

